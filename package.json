{
  "name": "nodets",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "volta": {
    "node": "17.9.1",
    "yarn": "1.22.19"
  },
  "scripts": {
    "build": "rimraf dist && swc ./src -d dist",
    "db:console": "docker compose exec postgres psql -h localhost -U postgres -d webapp_dev",
    "db:migrate": "knex migrate:latest",
    "docker:db:migrate": "docker compose run backend yarn db:migrate",
    "rebuild:backend": "docker compose build backend && docker compose rm --stop backend && docker compose up -d backend",
    "start": "node dist/index.js",
    "start:docker": "yarn build && node --inspect=0.0.0.0 dist/index.js"
  },
  "dependencies": {
    "@prisma/client": "^4.0.0",
    "express": "^4.18.1",
    "knex": "^2.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.213",
    "@tsconfig/node16": "^1.0.3",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.0.4",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "prisma": "^4.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1"
  }
}
