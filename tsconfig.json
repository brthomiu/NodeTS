{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
      "lib": [
        "ESNext", "DOM"
      ],
      "types": ["react/next", "react-dom/next", "node"],
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "jsx": "react-jsx",
    },
    "include": [
      "src", "../"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts"
    ],
  }